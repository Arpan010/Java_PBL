<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>
<?import javafx.scene.chart.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="smart_app_0.smart_analyse.controllers.MainController"
            prefHeight="600.0" prefWidth="800.0"
            stylesheets="@../styles/application.css">
    <center>
        <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
            <Tab fx:id="homeTab" text="Home">
                <VBox spacing="20" alignment="CENTER" styleClass="tab-content">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <Label text="Smart Question Analyser" styleClass="title-label"/>
                    <Label text="Upload a PDF file containing questions to analyze" styleClass="subtitle-label"/>
                    <Button fx:id="uploadButton" text="Upload PDF" styleClass="primary-button"/>
                    <Label fx:id="uploadStatusLabel" text="No file uploaded" styleClass="status-label"/>
                    <ProgressBar fx:id="uploadProgressBar" progress="0.0" prefWidth="300"/>
                </VBox>
            </Tab>
            
            <Tab fx:id="analysisTab" text="Analysis">
                <SplitPane dividerPositions="0.3" styleClass="tab-content">
                    <ListView fx:id="questionListView" styleClass="question-list"/>
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <Label text="Question Details" styleClass="section-label"/>
                        <TextArea fx:id="questionDetailsTextArea" wrapText="true" editable="false" VBox.vgrow="ALWAYS"/>
                        <Label text="Categories" styleClass="section-label"/>
                        <ListView fx:id="categoriesListView" prefHeight="100"/>
                    </VBox>
                </SplitPane>
            </Tab>
            
            <Tab fx:id="learnTab" text="Learn">
                <SplitPane dividerPositions="0.6" orientation="VERTICAL" styleClass="tab-content">
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <TextField fx:id="searchField" promptText="Search Wikipedia..." HBox.hgrow="ALWAYS"/>
                            <Button fx:id="searchButton" text="Search" styleClass="primary-button"/>
                        </HBox>
                        <WebView fx:id="wikiWebView" VBox.vgrow="ALWAYS"/>
                    </VBox>
                    <VBox spacing="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                        <Label text="Ask a Question" styleClass="section-label"/>
                        <TextArea fx:id="queryTextArea" promptText="Type your question here..." wrapText="true" prefHeight="80"/>
                        <Button fx:id="askButton" text="Ask" styleClass="primary-button"/>
                        <Label text="Response" styleClass="section-label"/>
                        <TextArea fx:id="responseTextArea" wrapText="true" editable="false" VBox.vgrow="ALWAYS"/>
                    </VBox>
                </SplitPane>
            </Tab>
            
            <Tab fx:id="dashboardTab" text="Dashboard">
                <ScrollPane fitToWidth="true" styleClass="tab-content">
                    <VBox fx:id="dashboardContainer" spacing="20">
                        <padding>
                            <Insets top="20" right="20" bottom="20" left="20"/>
                        </padding>
                        <Label text="Question Analysis Dashboard" styleClass="title-label"/>
                        <PieChart fx:id="categoriesChart" title="Question Categories" prefHeight="400"/>
                    </VBox>
                </ScrollPane>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
